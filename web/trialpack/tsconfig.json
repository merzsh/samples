{
  "compilerOptions": {
    "baseUrl": "./src",
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "outDir": "./src/public/",
    "module": "commonjs",
    "target": "es6",
    "paths": {
      "config/*": ["config/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
